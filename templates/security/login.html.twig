{% extends 'base.html.twig' %}
{% block body %}
<section class="row">
    <article class="col m12 l6 offset-l3 security-form">
        <div>
            <h1 class="center">Connexion</h1>
        </div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <div class="input-field">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>
        <div class="input-field">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="_password" />
        </div>

        <div class="center security-form-terms">
            <input type="checkbox" id="remember_me" name="_remember_me" />
            <label for="remember_me">Se souvenir de moi</label>
        </div>
        <div class="center">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn wave-effects" type="submit">Se connecter</button>
        </div>
    </form>
    <div class="center forgot-password">
        <a href="{{ path('forgot_password') }}">Mot de passe oubli√© ?</a>
    </div>
    </article>
</section>
{% endblock %}
