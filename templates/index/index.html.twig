{% extends 'base.html.twig' %}
{% block body %}

   <section class="row index-description">
       <h1></h1>
       <p></p>
   </section>
    <section class="row">
        <div class="col m12 l8">
            <div class="row">
                <div class="col s12 center index-titres">
                    <div class="">
                        <h2 class="white-text">Dernières études publiées</h2>
                    </div>
                    <div class="border-bot"></div>
                </div>
                {% for le in lastEtudes %}
                    <article class="col s12">
                        <div class="overview z-depth-2">

                            <div class="row reset">
                                <div class="col s12 overview-info">
                                    <img class="left circle responsive-img">
                                    {% if le.user != NULL %}
                                        <p class="left">Déniché par {{ le.user.username }}, le {{ le.dateAjout|date
                                                ('d-m-Y') }}</p>
                                    {% else %}
                                        <p class="left">Déniché par <em>Anonyme</em>, le {{ le.dateAjout|date
                                                ('d-m-Y') }}</p>
                                    {% endif %}
                                    <p class="right">{{ le.categorie.nom }}</p>
                                </div>

                                <div class="col s12 overview-text">
                                    <h3 class="center">{{ le.titre }}</h3>
                                    <a href="{{ path('view_etude', {'slug': le.slug}) }}">
                                    <p>
                                        {{ le.texte|striptags|slice(0, 150) }}
                                        {% if le.texte|length > 150 %}
                                            ... <a href="{{ path('view_etude', {'slug': le.slug}) }}">Lire la suite</a>
                                        {% endif %}
                                    </p>
                                    </a>
                                </div>
                                <div class="col s12 overview-actions">

                                </div>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>
        </div>
        <div class="col m12 l4">
            <div class="row">
                <div class="col s12 center index-titres">
                    <div class="">
                        <h2 class="white-text">Actualité</h2>
                    </div>
                    <div class="border-bot"></div>
                </div>
                <aside class="col s12 index-lastactu">
                    {% for la in lastActu %}
                        <div class="z-depth-2">
                            <div class="index-lastactu-date center">
                                Le {{ la.dateAjout|date('d-m-Y') }} à {{ la.dateAjout|date('H:i') }}
                            </div>
                            <div class="index-lastactu-titre">
                                <h3>{{ la.titre }}</h3>
                            </div>
                            <div class="index-lastactu-texte">
                                {{ la.texte|striptags|slice(0, 160) }} ... <a>Lire la suite</a>
                            </div>
                        </div>
                    {% endfor %}
                    <div class="center index-lastactu-link">
                        <p><a>Voir toutes les actus</a></p>
                    </div>
                </aside>
                <aside class="col m6 offset-m3 l12 annonce">

                </aside>
                <aside class="col m6 offset-m3 l12 index-add-btn">
                    <div class="center">
                        <a href="{{ path('proposer_etude') }}" class="waves-effect waves-light btn z-depth-2">Proposer une étude</a>
                    </div>
                </aside>
                <aside class="col m6 offset-m3 l12 newsletter">

                </aside>
            </div>
        </div>

    </section>
{% endblock %}
