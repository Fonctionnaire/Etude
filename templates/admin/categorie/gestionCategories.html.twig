{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/admintables.js') }}"></script>
{% endblock %}
{% block body %}
    {% include 'admin/nav/navAdmin.html.twig' %}
    <div class="row">
        <div id="admin" class="col s12 admin-gestion-table">
            <div class="card material-table">
                <div class="table-header">
                    <span class="table-title">Gestion des catégories</span>
                    <div class="actions">
                        <a href="#" class="search-toggle waves-effect btn-flat nopadding"><i class="material-icons">search</i></a>
                    </div>
                </div>
                <table id="" class="datatable">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Nombre d'études</th>
                        <th class="center">Editer / Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for c in categories %}
                        <tr>
                            <td>{{ c.nom }}</td>
                            <td>{{ c.etudes|length }}</td>
                            <td class="gestion-actions center">
                                <a href="{{ path('admin_edit_categorie', {'slug': c.slug}) }}" title="Editer">
                                    <i class="material-icons blue">edit</i>
                                </a>
                                <a href="{{ path('admin_delete_categorie', {'slug': c.slug}) }}"
                                   onclick="return confirm('Etes-vous sûr de vouloir supprimer cette actualité ?')"
                                   title="Supprimer">
                                    <i class="material-icons red ">delete</i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col s12 center admin-gestion-btn">
            <a href="{{ path('admin_index') }}" class="waves-effect waves-light btn">Retour</a>
        </div>

    </div>
{% endblock %}
